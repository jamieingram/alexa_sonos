{
  "apps" : [
    {
      "name"      : "alexa-skills",
      "script"    : "server.js",
      "env_stage" : {
        "NODE_ENV": "stage"
      },
      "env_live" : {
        "NODE_ENV": "live"
      }
    }
  ],

  "deploy" : {
    "stage" : {
      "user" : "jamie",
      "host" : "lingobee.com",
      "ref"  : "origin/develop",
      "repo" : "git@github.com:jamieingram/alexa_sonos.git",
      "path" : "/lingobee/data/www/lingobee/alexa_sonos/alexa_sonos_stage",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env stage",
      "env"  : {
        "NODE_ENV": "stage"
      }
    },
    "live" : {
      "user" : "jamie",
      "host" : "lingobee.com",
      "ref"  : "origin/develop",
      "repo" : "git@github.com:jamieingram/alexa_sonos.git",
      "path" : "/lingobee/data/www/lingobee/alexa_sonos/alexa_sonos_live",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env live",
      "env"  : {
        "NODE_ENV": "live"
      }
    }
  }
}
